@implements IDisposable

@inject NavigationManager NavigationManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand d-flex align-items-center gap-2" href="">
            <img src="favicon.png" alt="NodeSync" width="32" height="32" style="object-fit: contain;" />
            <span style="font-weight: 700; letter-spacing: 1px;">NodeSync</span>
        </a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <!-- Dashboard - All authenticated users -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-speedometer2" aria-hidden="true"></span> Dashboard
            </NavLink>
        </div>

        <!-- Production Worker Section -->
        <AuthorizeView Roles="ProductionWorker">
            <Authorized>
                <div class="nav-item px-3 mt-2">
                    <small class="text-muted px-2" style="font-size: 0.7rem; text-transform: uppercase; letter-spacing: 1px;">My Workspace</small>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="tasks/assigned">
                        <span class="bi bi-check2-square" aria-hidden="true"></span> My Work Orders
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="inventory/components">
                        <span class="bi bi-search" aria-hidden="true"></span> Inventory Lookup
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Manage">
                        <span class="bi bi-person-gear" aria-hidden="true"></span> Profile
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <!-- Production Manager Section -->
        <AuthorizeView Roles="ProductionManager">
            <Authorized>
                <div class="nav-item px-3 mt-2">
                    <small class="text-muted px-2" style="font-size: 0.7rem; text-transform: uppercase; letter-spacing: 1px;">Production Control</small>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="production/plans">
                        <span class="bi bi-clipboard-data" aria-hidden="true"></span> Production Plans
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="production/workorders">
                        <span class="bi bi-list-task" aria-hidden="true"></span> Work Order Manager
                    </NavLink>
                </div>
                
                <div class="nav-item px-3 mt-2">
                    <small class="text-muted px-2" style="font-size: 0.7rem; text-transform: uppercase; letter-spacing: 1px;">Inventory & Costs</small>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="inventory/components">
                        <span class="bi bi-box-seam" aria-hidden="true"></span> Inventory Mgmt
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="inventory/bom">
                        <span class="bi bi-diagram-3" aria-hidden="true"></span> BOM Management
                    </NavLink>
                </div>
                 <div class="nav-item px-3">
                    <NavLink class="nav-link" href="monitoring/environment">
                        <span class="bi bi-thermometer-half" aria-hidden="true"></span> Environment
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="reports">
                        <span class="bi bi-file-earmark-bar-graph" aria-hidden="true"></span> Reports
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <!-- Administrator Section -->
        <AuthorizeView Roles="Administrator">
            <Authorized>
                <div class="nav-item px-3 mt-2">
                    <small class="text-muted px-2" style="font-size: 0.7rem; text-transform: uppercase; letter-spacing: 1px;">Administration</small>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/users">
                        <span class="bi bi-people" aria-hidden="true"></span> User Management
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/logs">
                        <span class="bi bi-journal-text" aria-hidden="true"></span> Audit Logs
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Manage">
                        <span class="bi bi-person-circle" aria-hidden="true"></span> My Profile
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <!-- Superadmin Section -->
        <AuthorizeView Roles="Superadmin">
            <Authorized>
                <div class="nav-item px-3 mt-2">
                    <small class="text-muted px-2" style="font-size: 0.7rem; text-transform: uppercase; letter-spacing: 1px;">System Core</small>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/api-config">
                        <span class="bi bi-sliders" aria-hidden="true"></span> System Configuration
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/api-config">
                        <span class="bi bi-cloud-arrow-up" aria-hidden="true"></span> API Management
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/facilities">
                        <span class="bi bi-building" aria-hidden="true"></span> Facility Management
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/db-tools">
                        <span class="bi bi-database" aria-hidden="true"></span> Database Tools
                    </NavLink>
                </div>
                 <div class="nav-item px-3">
                     <NavLink class="nav-link" href="admin/users">
                        <span class="bi bi-shield-lock" aria-hidden="true"></span> Access All Areas
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <!-- Common Logout -->
        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3 mt-auto mb-3 border-top pt-3">
                    <form action="Account/Logout" method="post">
                        <AntiforgeryToken />
                        <input type="hidden" name="ReturnUrl" value="" />
                        <button type="submit" class="nav-link text-danger">
                            <span class="bi bi-box-arrow-left" aria-hidden="true"></span> Logout
                        </button>
                    </form>
                </div>
            </Authorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}
