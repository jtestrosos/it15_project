@page "/inventory/components"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using manufacturing_system.Data
@using manufacturing_system.Models
@using Microsoft.Extensions.DependencyInjection

@attribute [Authorize(Roles = "ProductionManager,ProductionWorker")]
@inject IServiceScopeFactory ScopeFactory
@inject NavigationManager NavigationManager

<PageTitle>Components</PageTitle>

<div class="row mb-4">
    <div class="col-md-6">
        <h1 class="h3 mb-0 text-gray-800">Components Inventory</h1>
        <p class="text-muted">Manage raw materials and parts stock.</p>
    </div>
    <div class="col-md-6 text-end">
        <AuthorizeView Roles="ProductionManager">
            <Authorized>
                <button class="btn btn-primary" @onclick="OpenCreateModal">
                    <i class="bi bi-plus-lg me-1"></i> Add Component
                </button>
            </Authorized>
        </AuthorizeView>
    </div>
</div>

@if (ShowCreateModal)
{
    <div class="modal fade show d-block" style="background: rgba(0,0,0,0.5);" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(IsEditing ? "Edit Component" : "New Component")</h5>
                    <button type="button" class="btn-close" @onclick="CloseCreateModal"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="NewComponent" OnValidSubmit="HandleValidSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="mb-3">
                            <label class="form-label">Component Name</label>
                            <InputText class="form-control" @bind-Value="NewComponent.ComponentName" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <InputTextArea class="form-control" @bind-Value="NewComponent.Description" />
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Unit Cost (PHP)</label>
                                <InputNumber class="form-control" @bind-Value="NewComponent.UnitCost" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Min Stock Level</label>
                                <InputNumber class="form-control" @bind-Value="NewComponent.MinStockLevel" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Supplier Info</label>
                            <InputText class="form-control" @bind-Value="NewComponent.SupplierInfo" />
                        </div>
                        
                        <div class="modal-footer px-0 pb-0">
                            <button type="button" class="btn btn-secondary" @onclick="CloseCreateModal">Cxancel</button>
                             <button type="submit" class="btn btn-primary">Save Component</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@if (components == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="d-flex justify-content-end mb-3">
        <button class="btn btn-outline-secondary btn-sm" @onclick="ToggleArchivedView">
            <i class="bi @(ShowArchived ? "bi-eye-slash" : "bi-eye") me-1"></i>
            @(ShowArchived ? "Show Active" : "Show Archived")
        </button>
    </div>

    <div class="card shadow mb-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Component Name</th>
                            <th>Description</th>
                            <th>Unit Cost</th>
                            <th>Min Stock</th>
                            <th>Supplier</th>
                            <AuthorizeView Roles="ProductionManager">
                                <Authorized>
                                    <th class="text-end pe-4">Actions</th>
                                </Authorized>
                            </AuthorizeView>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var comp in components.Where(c => c.IsArchived == ShowArchived))
                        {
                            <tr class="@(comp.IsArchived ? "table-secondary text-muted" : "")">
                                <td class="ps-4 fw-bold">@comp.ComponentName</td>
                                <td class="text-muted small">@comp.Description</td>
                                <td>@comp.UnitCost.ToString("C2")</td>
                                <td><span class="badge bg-secondary">@comp.MinStockLevel</span></td>
                                <td class="text-muted small">@comp.SupplierInfo</td>
                                <AuthorizeView Roles="ProductionManager">
                                    <Authorized>
                                        <td class="text-end pe-4">
                                            @if (!comp.IsArchived)
                                            {
                                                <!-- Edit Button -->
                                                <button class="btn btn-sm btn-outline-primary me-1" @onclick="() => OpenEditModal(comp)" title="Edit">
                                                    <i class="bi bi-pencil"></i>
                                                </button>
                                                <!-- Archive Button -->
                                                <button class="btn btn-sm btn-outline-danger" @onclick="() => ArchiveComponent(comp)" title="Archive">
                                                    <i class="bi bi-archive"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <!-- Restore Button -->
                                                <button class="btn btn-sm btn-outline-success" @onclick="() => RestoreComponent(comp)" title="Restore">
                                                    <i class="bi bi-arrow-counterclockwise"></i>
                                                </button>
                                            }
                                        </td>
                                    </Authorized>
                                </AuthorizeView>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@code {
    private List<Component>? components;
    private bool ShowCreateModal = false;
    private Component NewComponent = new();
    private bool ShowArchived = false; // Toggle state
    private bool IsEditing = false; // Track if we are editing

    protected override async Task OnInitializedAsync()
    {
        await LoadComponents();
    }

    private async Task LoadComponents()
    {
        using var scope = ScopeFactory.CreateScope();
        var context = scope.ServiceProvider.GetRequiredService<ApplicationDbContext>();
        components = await context.Components.AsNoTracking().ToListAsync();
    }

    private void ToggleArchivedView()
    {
        ShowArchived = !ShowArchived;
    }

    private void OpenCreateModal()
    {
        NewComponent = new Component();
        IsEditing = false;
        ShowCreateModal = true;
    }

    private void OpenEditModal(Component component)
    {
        // Create a copy to avoid editing the list item directly before saving
        NewComponent = new Component
        {
            ComponentID = component.ComponentID,
            ComponentName = component.ComponentName,
            Description = component.Description,
            UnitCost = component.UnitCost,
            MinStockLevel = component.MinStockLevel,
            SupplierInfo = component.SupplierInfo,
            IsArchived = component.IsArchived
        };
        IsEditing = true;
        ShowCreateModal = true;
    }

    private void CloseCreateModal()
    {
        ShowCreateModal = false;
    }

    private async Task HandleValidSubmit()
    {
        using var scope = ScopeFactory.CreateScope();
        var context = scope.ServiceProvider.GetRequiredService<ApplicationDbContext>();
        
        if (IsEditing)
        {
            // Update existing component
            var existing = await context.Components.FindAsync(NewComponent.ComponentID);
            if (existing != null)
            {
                existing.ComponentName = NewComponent.ComponentName;
                existing.Description = NewComponent.Description;
                existing.UnitCost = NewComponent.UnitCost;
                existing.MinStockLevel = NewComponent.MinStockLevel;
                existing.SupplierInfo = NewComponent.SupplierInfo;
                // IsArchived is not changed here typically
            }
        }
        else
        {
            // Create new component
            context.Components.Add(NewComponent);
        }

        await context.SaveChangesAsync();
        await LoadComponents();
        CloseCreateModal();
    }

    private async Task ArchiveComponent(Component component)
    {
        using var scope = ScopeFactory.CreateScope();
        var context = scope.ServiceProvider.GetRequiredService<ApplicationDbContext>();
        
        var existing = await context.Components.FindAsync(component.ComponentID);
        if (existing != null)
        {
            existing.IsArchived = true;
            await context.SaveChangesAsync();
            await LoadComponents();
        }
    }

    private async Task RestoreComponent(Component component)
    {
        using var scope = ScopeFactory.CreateScope();
        var context = scope.ServiceProvider.GetRequiredService<ApplicationDbContext>();
        
        var existing = await context.Components.FindAsync(component.ComponentID);
        if (existing != null)
        {
            existing.IsArchived = false;
            await context.SaveChangesAsync();
            await LoadComponents();
        }
    }
}
