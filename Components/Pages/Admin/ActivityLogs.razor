@page "/admin/logs"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using manufacturing_system.Data
@using manufacturing_system.Models

@attribute [Authorize(Roles = "Superadmin,Administrator")]
@inject ApplicationDbContext Context

<PageTitle>Activity Logs</PageTitle>

<div class="row mb-4">
    <div class="col-md-6">
        <h1 class="h3 mb-0 text-gray-800">Activity Logs</h1>
        <p class="text-muted">Audit system actions and user activity.</p>
    </div>
</div>

@if (logs == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="card shadow mb-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Time</th>
                            <th>User</th>
                            <th>Action</th>
                            <th>Details</th>
                            <th>IP Address</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in logs)
                        {
                            <tr>
                                <td class="ps-4 text-nowrap">@log.Timestamp.ToString("g")</td>
                                <td>
                                    <div class="fw-bold">@log.User?.UserName</div>
                                    <div class="small text-muted">@log.User?.Role</div>
                                </td>
                                <td><span class="badge bg-secondary text-light">@log.ActionType</span></td>
                                <td>@log.Details</td>
                                <td class="text-muted small">@log.IPAddress</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@code {
    private List<ActivityLog>? logs;

    protected override async Task OnInitializedAsync()
    {
        await LoadLogs();
    }

    private async Task LoadLogs()
    {
        logs = await Context.ActivityLogs
            .Include(l => l.User)
            .OrderByDescending(l => l.Timestamp)
            .Take(100) // Limit to last 100 logs for performance
            .ToListAsync();
    }
}
