@inherits LayoutComponentBase

<div class="auth-page">
    <div class="auth-background">
        <div class="auth-gradient"></div>
        <div class="auth-pattern"></div>
        <div class="floating-shapes">
            <div class="shape shape-1"></div>
            <div class="shape shape-2"></div>
            <div class="shape shape-3"></div>
            <div class="shape shape-4"></div>
        </div>
    </div>
    
    <div class="auth-container">
        <div class="auth-brand">
            <div class="brand-icon">
                <img src="favicon.png" width="48" height="48" alt="NodeSync Logo" />
            </div>
            <h1 class="brand-title">NodeSync</h1>
            <p class="brand-subtitle">Integrated Production System</p>
        </div>
        
        <div class="auth-card">
            @Body
        </div>
        
        <p class="auth-footer">Â© 2026 NodeSync. Electronics Production Facility</p>
    </div>
</div>

<style>
    .auth-page {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
        font-family: 'Segoe UI', 'Helvetica Neue', Helvetica, Arial, sans-serif;
    }

    .auth-background {
        position: fixed;
        inset: 0;
        z-index: -1;
    }

    .auth-gradient {
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, #1e1b4b 0%, #312e81 50%, #4c1d95 100%);
    }

    .auth-pattern {
        position: absolute;
        inset: 0;
        background-image: 
            radial-gradient(circle at 25% 25%, rgba(139, 92, 246, 0.1) 0%, transparent 50%),
            radial-gradient(circle at 75% 75%, rgba(124, 58, 237, 0.15) 0%, transparent 50%);
    }

    .floating-shapes {
        position: absolute;
        inset: 0;
        overflow: hidden;
    }

    .shape {
        position: absolute;
        border-radius: 50%;
        background: linear-gradient(135deg, rgba(139, 92, 246, 0.3), rgba(124, 58, 237, 0.1));
        filter: blur(40px);
        animation: float 20s infinite ease-in-out;
    }

    .shape-1 {
        width: 400px;
        height: 400px;
        top: -100px;
        left: -100px;
        animation-delay: 0s;
    }

    .shape-2 {
        width: 300px;
        height: 300px;
        top: 50%;
        right: -50px;
        animation-delay: -5s;
    }

    .shape-3 {
        width: 250px;
        height: 250px;
        bottom: -50px;
        left: 30%;
        animation-delay: -10s;
    }

    .shape-4 {
        width: 200px;
        height: 200px;
        top: 30%;
        left: 50%;
        animation-delay: -15s;
    }

    @@keyframes float {
        0%, 100% { transform: translate(0, 0) rotate(0deg); }
        25% { transform: translate(30px, -30px) rotate(5deg); }
        50% { transform: translate(-20px, 20px) rotate(-5deg); }
        75% { transform: translate(20px, 30px) rotate(3deg); }
    }

    .auth-container {
        width: 100%;
        max-width: 440px;
        padding: 2rem;
        z-index: 1;
    }

    .auth-brand {
        text-align: center;
        margin-bottom: 2rem;
    }

    .brand-icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1rem;
    }

    .brand-icon img {
        width: 80px;
        height: 80px;
        object-fit: contain;
    }

    @@keyframes pulse-glow {
        0%, 100% { box-shadow: 0 20px 40px rgba(124, 58, 237, 0.4); }
        50% { box-shadow: 0 25px 50px rgba(124, 58, 237, 0.6); }
    }

    .brand-title {
        font-size: 2.5rem;
        font-weight: 800;
        color: white;
        margin: 0;
        letter-spacing: -0.5px;
    }

    .brand-subtitle {
        color: rgba(255, 255, 255, 0.7);
        font-size: 1rem;
        margin: 0.5rem 0 0;
    }

    .auth-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border-radius: 24px;
        padding: 2.5rem;
        box-shadow: 
            0 25px 50px -12px rgba(0, 0, 0, 0.25),
            0 0 0 1px rgba(255, 255, 255, 0.1);
    }

    .auth-footer {
        text-align: center;
        color: rgba(255, 255, 255, 0.5);
        font-size: 0.875rem;
        margin-top: 2rem;
    }
</style>
